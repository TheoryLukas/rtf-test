<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc">
	<mvc:View>
		<l:VerticalLayout id="idVerticalLayout" class="sapUiContentPadding" width="100%">
			<HBox alignItems="Center">
				<Label text="Select TinyMCE version:" labelFor="idSelect" class="sapUiSmallMarginEnd"/>
				<Select core:require="{ handler: 'project1/ext/controller/RichTextEditor.controller'}" id="idSelect" change="handleSelect">
					<core:Item key="TinyMCE6" text="RichTextEditor with TinyMCE6"/>
					<core:Item key="TinyMCE5" text="RichTextEditor with TinyMCE5"/>
				</Select>
			</HBox>
		</l:VerticalLayout>
	</mvc:View>
</core:FragmentDefinition>